<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_marginVertical="70dp"
        android:id="@+id/Tips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:padding="10.0dip"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginStart="1.0dip"
            android:padding="4.0dip"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Obrazek" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jak pobrać video/mp3?"
                android:textColor="@color/white"
                android:textSize="15.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="•   Skopiuj link z aplikacji Youtube"
                android:textColor="@color/white"
                android:textSize="13.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="•   Po prostu skopiuj link z przeglądarki"
                android:textColor="@color/white"
                android:textSize="13.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="•   Wklej link do pola oraz kliknij download"
                android:textColor="@color/white"
                android:textSize="13.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="250dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/link_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:autofillHints="Całe te"
            android:background="@color/purple_500"
            android:hint="Podaj ścieżkę do filmu"
            android:inputType="textUri"
            android:padding="14dp"
            android:singleLine="true"
            android:textColorHint="@color/purple_700" />

        <Button
            android:id="@+id/btn_download"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:background="@color/purple_500"
            android:padding="5dp"
            android:text="Download"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewLUB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="LUB"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_file"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:background="@color/purple_500"
            android:padding="5dp"
            android:text="Wybierz plik z telefonu"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>